<p id="notice"><%= notice %></p>

<p>
  <% if @product.image.url.nil? %>
    <%= image_tag 'no-image.jpg', class: "img-responsive product-image" %>
  <% else %>
    <%= image_tag @product.image.url, class: "img-responsive product-image" %>
  <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category_id %>
</p>

<div class="col-md-6">
  <div class="card p-3">
    <%= form_for(LineItem.new) do |f| %>
      <p>
        <%= f.hidden_field :product_id, @product.id %>
        <%= f.number_field :quantity, 1, placeholder: "How many?" %>
        <%= hidden_field_tag :order_id, current_order.id  %>
      </p>
      <p><%= f.submit_tag "Add to Cart", class: "btn btn-primary" %></p>
    <% end %>
    <div class="card-footer">
      <% if user_signed_in? %>
        <% if can? :update, Product %>
          <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-sm btn-warning" %> |
        <% end %>
        <% if can? :delete, Product %>
          <%= link_to "!Destroy!", @product, class: "btn btn-sm btn-danger label-alert", method: :delete, data: {confirm: "Confirm Delete Product"} %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
