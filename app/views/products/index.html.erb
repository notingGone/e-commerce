<p id="notice"><%= notice %></p>

<h1>Products</h1>
<p><%= link_to 'New Product', new_product_path, class: "btn btn-sm btn-dark" %></p>

<table class="table table-striped table-hover table-dark">
  <thead class="thead-light">
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Brand</th>
      <!-- <th>Rating</th> -->
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% @products.each do |product| %>
        <% if product.image.url.nil? %>
          <td><%= image_tag 'no-image.jpg', class: "img-responsive product-image" %></td>
        <% else %>
          <td><%= image_tag product.image.url, class: "img-responsive product-image" %></td>
        <% end %>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.description %></td>
        <td><%= product.brand %></td>
        <!-- <td><%#= product.rating %></td> -->
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-sm btn-dark" %>
