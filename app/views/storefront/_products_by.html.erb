<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card p-2 m-2 center-it product-thumb-card ">
        <p><%= image_tag product.image.url, class: "product-image" %></p>
        <h4><%= link_to product.name, product %></h4>
        <p><%= number_to_currency product.price %></p>
        <p>
          <a href='#' data-toggle="modal" data-target="#myModal_<%= product.id %>">
            <i class='fa fa-plus'></i>More Info
          </a>
        </p>
      </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">

          <div class="modal-header">
            <div class="modal-title text-left" id="myModalLabel">
              <h3><%= link_to product.name, product %></h3>
            </div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
          </div>

          <div class="modal-body">
            <% if product.image.url.nil? %>
              <%= image_tag 'no-image.jpg', class: "img-responsive product-image" %>
            <% else %>
              <%= image_tag product.image.url, class: "img-responsive product-image" %>
            <% end %>
            <p><%= number_to_currency product.price %></p>
            <p><%= product.description %></p>
            <p><strong>Qty: </strong> <%= product.quantity %></p>
            <p>made by <%= product.brand %></p>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= form_for @line_item, url: add_to_cart_path do |f| %>
              <div class="form-group">
                <%= f.hidden_field :product_id, value: product.id %>
              </div>
              <div class="form-group">
                <%= f.hidden_field :line_item_id, value: @line_item.id %>
              </div>
              <span class="form-group">
                <%= f.number_field :quantity, value: 1 %>
              </span>
              <span class="form-group">
                <%= f.submit "Add to Cart", class: "btn btn-primary" %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
